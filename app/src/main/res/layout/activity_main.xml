<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/theme_color"
        android:text="Spot Finder"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="30sp"
        android:paddingTop="40dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lonBar"
        tools:context=".MainActivity"/>

    <SearchView
        android:id="@+id/addressBar"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@drawable/textfield_border"
        android:queryHint="Enter Address"
        android:iconifiedByDefault="false"
        app:layout_constraintTop_toBottomOf="@id/header"/>

    <EditText
        android:id="@+id/latBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:textSize="15sp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/addressBar"/>

    <EditText
        android:id="@+id/lonBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:textSize="15sp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/latBar" />

    <Button
        android:id="@+id/addLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Location"
        android:backgroundTint="@color/theme_color"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/map"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete Location"
        android:backgroundTint="@color/theme_color"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/map"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/update"/>

    <Button
        android:id="@+id/update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Location"
        android:backgroundTint="@color/theme_color"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/map"
        app:layout_constraintStart_toEndOf="@id/delete"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>